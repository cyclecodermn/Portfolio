@model bikes.models.Tables.BikeFrameTable

@{
    ViewBag.Title = "Edit Frame";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <h2>Edit Frame</h2>
        @Html.ActionLink("Return to List", "MngFrames", "SiteAdmin")
    </div>
</div>
<div class="row">
    @Html.Partial("~/Views/Shared/_SideNavPartial.cshtml")
    <div class="col-xs-9">
        @Html.ValidationSummary()

        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m => m.BikeFrameId)
            <div class="form-group">
                <label>Frame</label>
                @Html.TextBoxFor(m => m.BikeFrame, new { @class = "form-control", placeholder = "Frame" })
            </div>

            <span class="text-danger">@Html.ValidationMessageFor(m => m.BikeFrameId)</span>
            <br />
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
            @Html.ActionLink("Cancel", "MngFrames", "SiteAdmin", null, new { @class = "btn btn-sm btn-info" })
        }
    </div>
</div>      